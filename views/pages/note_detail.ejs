<%- include('../layout/header'); %>
<div class="card">
    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
        <h2 class="mb-0"><%= note.title %></h2>
        <div class="actions">
            <a href="/notes/<%= note.id %>/edit" class="btn btn-primary">Editar</a>
             <form action="/notes/<%= note.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Deseja mover esta anotação para a lixeira?');">
                <button type="submit" class="btn btn-outline-danger">Lixeira</button>
            </form>
        </div>
    </div>
    <div class="card-body note-content">
        <%- renderedContent %>
    </div>
</div>
<%- include('../layout/footer'); %>